{
  "extends": "stylelint-config-standard-scss",
  "rules": {
    "scss/at-rule-no-unknown": [ true, {
      "ignoreAtRules": [
        "extends",
        "tailwind"
      ]
    }],
    "no-invalid-position-at-import-rule": [ true, {
      "ignoreAtRules": ["tailwind"]
    }],
    "block-no-empty": null,
    "string-quotes": "single",
    "unit-allowed-list": ["vh", "vw", "px", "em", "rem", "s", "%"]
  }
}